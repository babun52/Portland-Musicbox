
<%= erb :header %>

<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h3 class="band_name"><a href="/user/account/<%= @artist.id %>"><%= @artist.name %></a></h3>
      <% if @form == nil %>
        <%= erb :profile %>
      <% elsif @form == "album" %>
        <%= erb :album_form %>
      <% elsif @form == "artist" %>
        <%= erb :artist_profile %>
      <% elsif @form == "merch" %>
        <%= erb :add_merch %>
      <% end %>
    </div>

    <%= erb :artist_menu %>

  </div>
</div>
