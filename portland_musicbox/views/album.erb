<%= erb :header %>
<div class="container">
  <div class="page-header">
    <div class="container albums-container">
      <div class="col-sm-4 album_holder">
        <div class="album_photo1" id="<%= @album.id %>">
          <img class="img-responsive" src="<%= @album.album_photo_name %>">
        </div>
      </div>
      <div class="col-sm-8">
        <h3><%= @artist.name %></h3>
        <h1 class="album_name"><%= @album.name %></h1>
        <iframe style="border: 0; width: 100%; height: 120px;" src="<%= @album.music_embed %>" seamless><%= @album.name %> by <%= @artist.name %></iframe>
      </div>
    </div>
  </div>
  <% if @album.reviews.any?() %>
  <div class="col-md-8">
    <h4><%= @album.reviews[0].text() %></h4>
  </div>
  <div class="col-md-4">
    <h4>by <a href="#"><%= @album.reviews[0].author() %></a></h4><br><br>
    <h4>Label: <%= @album.label %></h4><br>
    <h4>Track List</h4><p class="well"></p><br>
    <h4 class="well">Credits:<br><br>"<%= @album.credits %>"</h4>
  </div>
  <% else %>
  <h2>There is no review for this album yet!</h2>
  <% end %>
  <div class="col-md-12">
    <h4><a href="/reviews">Back</a></h4>
  </div>
</div>
